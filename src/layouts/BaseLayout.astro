---
import ContactBanner from "../components/ContactBanner.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";

type Props = {
  pageTitle: string;
  shouldDisplayBack?: boolean;
  displayContactBanner?: boolean;
};

const {
  pageTitle,
  shouldDisplayBack = false,
  displayContactBanner = false,
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <Header />

    <main>
      {shouldDisplayBack && <button id="back-button">Back</button>}

      {displayContactBanner && <ContactBanner />}

      <slot />
    </main>

    <Footer />
  </body>

  <script>
    document
      .getElementById("back-button")
      ?.addEventListener("click", () => window.history.back());
  </script>
</html>
