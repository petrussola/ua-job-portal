---
import type { OpeningProps } from "../types/types";
import OpeningEntry from "./OpeningEntry.astro";

type Props = {
  openingsList: OpeningProps[];
};

const { openingsList } = Astro.props;
---

<ul class="flex list-none flex-col gap-6 py-6 w-full">
  {
    openingsList.map((job) => {
      return <OpeningEntry opening={job} />;
    })
  }
</ul>
